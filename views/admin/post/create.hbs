<section class="container mt-5">
  {{#if erro}}
  <div class="alert alert-danger" role="alert">
    {{erro}}
  </div>
  {{/if}}

  {{#if message}}
  <div class="alert alert-success" role="alert">
    {{message}}
  </div>
  {{/if}}
  <h3>Criar postagem</h3>
  <div class="card">
    <div class="card-body">
      <form action="/admin/post/criar" method="POST">
        <label for="title">Titulo:</label>
        <input type="text" name="title" class="form-control mt-1" required>
        <label for="content">Conteudo:</label>
        <input type="text" name="content" class="form-control mt-1" required>
        <label for="content">Categorias: </label>
        <select class="form-select mt-4" aria-label="Categorias" name="category">
          {{#each categorys}}
          <option value="{{_id}}">{{name}}</option>
          {{/each}}
        </select>
        <button type="submit" class="btn btn-success mt-4">Criar</button>
        <button type="button" class="btn btn-danger mt-4"><a href="/">Voltar</a></button>
      </form>
    </div>
  </div>
</section>